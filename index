{ value: 20, name: '精神慰藉服务', itemStyle: { color: 'rgba(251, 191, 114, 1)' } }
]
}
]
};
serviceChart.setOption(serviceOption);
// 用户满意度趋势图表
const satisfactionChart = echarts.init(document.getElementById('satisfactionChart'));
const satisfactionOption = {
animation: false,
tooltip: {
trigger: 'axis',
